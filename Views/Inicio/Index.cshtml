@model IEnumerable<InventarioComputadoras.Models.Computadora>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center"></h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn d-block mx-auto btn-lg" style="background-color: #5F51F3; border-color: #5F51F3; color: #ffffff;">Nuevo Computador</a>
        </a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong> Lista de Computadores </strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count()>0)
                    {
                        <table class="table table-bordered" id="tblComputadoras" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Oficina)</th>
                                    <th>@Html.DisplayNameFor(m => m.NombreAnterior)</th>
                                    <th>@Html.DisplayNameFor(m => m.NombreNuevo)</th>
                                    <th>@Html.DisplayNameFor(m => m.Departamento)</th>
                                    <th>@Html.DisplayNameFor(m => m.DireccionIp)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Oficina)</td>
                                        <td>@Html.DisplayFor(m => item.NombreAnterior)</td>
                                        <td>@Html.DisplayFor(m => item.NombreNuevo)</td>
                                        <td>@Html.DisplayFor(m => item.Departamento)</td>
                                        <td>@Html.DisplayFor(m => item.DireccionIp)</td>
                                        <td>
                                            <a class="btn" asp-action="Editar" asp-route-id="@item.Id" style="background-color: #ffc107; border-color: #ffc107; color: #212529;">Editar</a>
                                            <a class="btn" asp-action="Detalle" asp-route-id="@item.Id" style="background-color: #17202A; border-color: #17202A; color: #ffffff;">Detalles</a>
                                            <a class="btn" asp-action="Borrar" asp-route-id="@item.Id" style="background-color: #D41B1B; border-color: #D41B1B; color: #ffffff;">Borrar</a>

                                        </td>
                                    </tr>    
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblComputadoras').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de _MAX_ total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}