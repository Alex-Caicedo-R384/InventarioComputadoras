@model InventarioComputadoras.Models.Computadora
@{
    ViewData["Title"] = "Editar Computador";
}

<h1>Computadoras</h1>
<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Editar Computador</strong></h3>
            </div>
            <div class="card-body">
                <form id="formularioEditar" asp-action="Editar">

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Oficina" class="control-label"></label>
                        <select asp-for="Oficina" asp-items="ViewBag.Zonas" class="form-control"></select>
                        <span asp-validation-for="Oficina" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Departamento" class="control-label"></label>
                        <select asp-for="Departamento" asp-items="ViewBag.Departamentos" class="form-control"></select>
                        <span asp-validation-for="Departamento" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DireccionIp" class="control-label"></label>
                        <input asp-for="DireccionIp" class="form-control" placeholder="Ingresa la Dirección IP" />
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="sinDireccionIPCheck">
                            <label class="form-check-label" for="sinDireccionIPCheck">
                                Sin Direccion IP
                            </label>
                        </div>
                        <input type="hidden" asp-for="SinDireccionIP" id="sinDireccionIPHidden">
                        <span asp-validation-for="DireccionIp" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button id="btnEditar" type="submit" class="btn btn-secondary d-block mx-auto" style="background-color: #ffc107; border-color: #ffc107; color: #212529;">Editar Computador</button>
                    </div>

                </form>
                <a asp-controller="Inicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var formulario = document.getElementById("formularioEditar");
            var selects = formulario.getElementsByTagName("select");
            var inputs = formulario.getElementsByTagName("input");

            var valoresIniciales = {};
            for (var i = 0; i < selects.length; i++) {
                valoresIniciales[selects[i].name] = selects[i].value;
                selects[i].addEventListener('change', function () {
                    verificarCambios();
                });
            }

            for (var i = 0; i < inputs.length; i++) {
                valoresIniciales[inputs[i].name] = inputs[i].value;
                inputs[i].addEventListener('input', function () {
                    verificarCambios();
                });
            }

            var sinDireccionIPCheck = document.getElementById('sinDireccionIPCheck');

            sinDireccionIPCheck.addEventListener('change', function () {
                verificarCambios();
            });

            function verificarCambios() {
                var cambiosRealizados = false;
                var oficinaModificada = false;
                var departamentoModificado = false;
                var direccionIPModificada = false;

                for (var i = 0; i < selects.length; i++) {
                    if (selects[i].value !== valoresIniciales[selects[i].name]) {
                        cambiosRealizados = true;
                        if (selects[i].name === "Oficina" || selects[i].name === "Departamento") {
                            if (selects[i].name === "Oficina") {
                                oficinaModificada = true;
                            } else if (selects[i].name === "Departamento") {
                                departamentoModificado = true;
                            }
                        }
                    }
                }

                for (var i = 0; i < inputs.length; i++) {
                    if (inputs[i].value !== valoresIniciales[inputs[i].name]) {
                        cambiosRealizados = true;
                        if (inputs[i].name === "DireccionIp") {
                            direccionIPModificada = true;
                        }
                    }
                }

                if (!cambiosRealizados && !sinDireccionIPCheck.checked) {
                    document.getElementById("btnEditar").disabled = true;
                } else {
                    if (oficinaModificada || departamentoModificado || direccionIPModificada) {
                        document.getElementById("btnEditar").disabled = false;
                    } else {
                        document.getElementById("btnEditar").disabled = true;
                    }
                }
            }

            verificarCambios();
        });


        document.addEventListener('DOMContentLoaded', function () {
            var sinDireccionIPCheck = document.getElementById('sinDireccionIPCheck');
            var DireccionIpInput = document.getElementById('DireccionIp');
            var sinDireccionIPHidden = document.getElementById('sinDireccionIPHidden');

            if (!sinDireccionIPCheck.checked) {
                DireccionIpInput.disabled = false;
                sinDireccionIPHidden.value = 'false';
            } else {
                DireccionIpInput.disabled = true;
                DireccionIpInput.value = "Sin Direccion IP";
                sinDireccionIPHidden.value = 'true';
            }
        });

        document.getElementById('sinDireccionIPCheck').addEventListener('change', function () {
            var DireccionIPInput = document.getElementById('DireccionIp');
            var sinDireccionIPHidden = document.getElementById('sinDireccionIPHidden');

            if (this.checked) {
                DireccionIPInput.disabled = true;
                DireccionIPInput.value = "Sin Direccion IP";
                sinDireccionIPHidden.value = 'true';
            } else {
                DireccionIPInput.disabled = false;
                DireccionIPInput.value = "";
                sinDireccionIPHidden.value = 'false';
            }
        });
    </script>
}
